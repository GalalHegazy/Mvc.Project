@model EmployeeViewModel
@* @inject IDepartmentRepository _departmentRepository // DIView To Create obj From Class Department // //(Go To UnitOfWork) *@
@inject IUintOfWork _uintOfWork
@{
    /* type: dynimic to SelectList */
    var Departments = new SelectList(await _uintOfWork.DepartmentRepository.GetAllAsync(), nameof(Department.Id), nameof(Department.Name));
}


<div class="col-md-6 px-5 pb-4 ">

    @if (@ViewData["Image"] is not null)
    {
        <div class=" d-flex justify-content-center align-items-center pt-3 ">
            <div class=" img-card w-50 d-flex justify-content-center align-items-center">
                <img src="~/Files/Images/@ViewData["Image"]" class="img-product card-img-top w-50 rounded-circle">
            </div>
        </div>
    }

    <label asp-for="Name" class="text-light fw-semibold"></label>
    <input asp-for="Name" class=" mt-1 form-control " />
    <span asp-validation-for="Name" class="text-danger"></span> @* //for validtion  *@

    <label asp-for="Age" class="my-1 text-light fw-semibold"></label>
    <input asp-for="Age" type="text" class="form-control" />

    <label asp-for="Email" class="my-1 text-light fw-semibold"></label>
    <input asp-for="Email" class="form-control" />
    @* <span></span> //for validtion *@

    <label asp-for="Address" class=" my-1 text-light fw-semibold"></label>
    <input asp-for="Address" class="form-control " />
    @* <span></span> //for validtion *@




    <div class="row  mt-1 ">
        <div class="col-md-6">

            <label asp-for="ImageName" class=" text-light fw-semibold"></label>
            <input asp-for="FormFile" type="file" class="form-control mt-1 " />

        </div>
        <div class="col-md-6">

            <label></label>
            <select asp-for="Gander" class=" form-select form-select mt-1 " asp-items="Html.GetEnumSelectList<Gander>()">
                <option disabled selected> --- Gander --- </option>
            </select>


        </div>

    </div>

</div>

<div class="col-md-6 p-5  ">


    <label asp-for="Salary" class=" text-light fw-semibold"></label>
    <input asp-for="Salary" class="mt-1 form-control" />
    @* <span></span> //for validtion *@

    <div class="row  mt-2  ">
        <div class="col-md-6">

            <label asp-for="HiringDate" class=" text-light fw-semibold"></label>
            <input asp-for="HiringDate" class="form-control mt-1 " />

            <label></label>
            <select class="form-select form-select mt-1 " asp-items="@Departments" asp-for="DepartmentId">
                <option disabled selected> --- Department --- </option>
            </select>

        </div>
        <div class="col-md-6">
            <label></label>
            <select asp-for="EmployeeType" class="form-select form-select mt-1 " asp-items="Html.GetEnumSelectList<EmpType>()">
                <option disabled selected> --- Employee Type --- </option>
            </select>
            @* <span></span> //for validtion *@


        </div>

    </div>


    <div class="form-check mt-2">
        <input asp-for="IsActive" class="form-check-input " type="checkbox">
        <label asp-for="IsActive" class="form-check-label text-light"></label>
    </div>



</div>