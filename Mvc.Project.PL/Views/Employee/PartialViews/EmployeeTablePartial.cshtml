@model IEnumerable<EmployeeViewModel>


@foreach (var Employee in Model)
{
    <div class=" col-md-4 col-lg-3 ">
        <div class="card card-product">

            <div class=" img-card d-flex justify-content-center align-items-center ">
                <img src="~/Files/Images/@Employee.ImageName" class="img-product card-img-top w-50 my-4 rounded-circle" alt="Employee Name" />
            </div>


            <div class="card-body p-3 rounded-top-4 shadow-lg d-flex flex-column justify-content-center align-items-center">
                <h6 class="card-title fs-5 text-black fw-bold ">@Html.DisplayFor(E => Employee.Name)</h6>
                <div class=" px-3 rounded-5 bg-secondary mb-3">
                    <p class="card-text fs-5 text-black-50 fw-bold ">@Html.DisplayFor(E => Employee.Department.Name)</p>
                </div>
                <div class=" w-100 d-flex justify-content-between   ">
                    <span class=" text-dark fw-bolder">@Html.DisplayNameFor(x => x.EmployeeType)</span>
                    <span class="text-muted ">@Html.DisplayFor(E => Employee.EmployeeType)</span>
                </div>
                <div class="d-flex justify-content-between w-100  ">
                    <span class=" text-dark  fw-bolder">@Html.DisplayNameFor(x => x.HiringDate)</span>
                    <span class="text-muted">@Html.DisplayFor(E => Employee.HiringDate) </span>
                </div>
            </div>



            <div class="card-footer py-1  rounded-bottom-2 p-0 d-flex justify-content-between">
            </div>

            <div class="  d-flex justify-content-around my-1 p-1">
                <partial name="_ButtonsIndexPartial" model="@Employee.Id.ToString()" />
            </div>

        </div>
    </div>
}

